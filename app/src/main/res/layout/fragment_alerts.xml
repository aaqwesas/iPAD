<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Alert Type Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert Type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Price Rise Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/priceRiseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price Rise"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Price rises above -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 1D rise exceeds -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Change in 3 min is up -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Change in 5 min is up -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Price Fall Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/priceFallLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price Fall"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Price drops to -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 1D fall exceeds -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Change in 3 min is down -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Change in 5 min is down -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Market Data Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market Data"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Market Data Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/marketDataLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Volume exceeds -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Turnover Above -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Turnover ratio exceeds -->
                <include
                    layout="@layout/item_alert_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>