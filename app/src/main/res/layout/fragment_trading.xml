<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Stock Header Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/light_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStockSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAPL"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvStockPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="180.50"
                    android:textSize="24sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvPriceChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="+1.84 (+0.58%)"
                    android:textSize="16sp"
                    android:textColor="@color/green" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Updated: 12:22:08 pm"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Account Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="John's Account"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_up_float"
                    app:tint="@color/green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash BP:"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvCashBP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$45,235.12"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Margin BP:"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvMarginBP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$90,470.24"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuy"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Buy"
                app:backgroundTint="@color/green" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSell"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Sell"
                app:backgroundTint="@color/red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShort"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Short"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCover"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cover"
                style="@style/Widget.Material3.Button.TextButton" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Order Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/light_gray">

            <!-- Shares Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shares"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecreaseShares"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvShares"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncreaseShares"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Ownership Info -->
            <TextView
                android:id="@+id/tvOwnership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You own 0 AAPL"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Order Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order Type"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOrderTypeLeft"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="&lt;"
                        style="@style/Widget.Material3.Button.TextButton"/>

                    <TextView
                        android:id="@+id/tvOrderType"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Limit"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOrderTypeRight"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="&gt;"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </LinearLayout>

            <!-- Limit Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Limit Price"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecreasePrice"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvLimitPrice"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="180.50"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncreasePrice"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDurationLeft"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="&lt;"
                        style="@style/Widget.Material3.Button.TextButton" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="GT90"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDurationRight"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="&gt;"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </LinearLayout>

            <!-- Estimated Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estimated Total"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvEstimatedTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,805.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Review Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReviewOrder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Review Order"
                android:textSize="18sp"
                app:backgroundTint="@color/blue" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>