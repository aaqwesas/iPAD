<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Alert Popups"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test different types of stock alert popups. Each button will show a different alert scenario."
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Test Buttons Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Price Rise Test -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_price_rise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Price Rise Alert"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/green"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button" />

            <!-- Price Fall Test -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_price_fall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Price Fall Alert"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/red"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button" />

            <!-- Volume Test -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Volume Alert"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        <!-- Instructions -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>